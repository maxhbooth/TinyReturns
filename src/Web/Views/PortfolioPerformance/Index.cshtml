@model Dimensional.TinyReturns.Core.PortfolioReportingContext.Services.PublicWebReport.PublicWebReportFacade.PortfolioModel[]

@{
    ViewBag.Title = "Portfolio Performance";
}

<div>

    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Number</th>
                <th>Name</th>
                <th>1 Month</th>
                <th>3 Month</th>
                <th>Year to Date</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var portfolio in Model)
            {
                <tr style="background: lavenderblush">
                    
                    @if (portfolio.OneMonth != null)
                    {
                        portfolio.OneMonth = decimal.Round((decimal) portfolio.OneMonth, 2, MidpointRounding.AwayFromZero);
                    }
                    @if (portfolio.ThreeMonth != null)
                    {
                        portfolio.ThreeMonth = decimal.Round((decimal)portfolio.ThreeMonth, 2, MidpointRounding.AwayFromZero);
                    }
                    @if (portfolio.YearToDate != null)
                    {
                        portfolio.YearToDate = decimal.Round((decimal) portfolio.YearToDate, 2, MidpointRounding.AwayFromZero);
                    }
                    <td>@portfolio.Number</td>
                    <td>@portfolio.Name</td>
                    <td>@portfolio.OneMonth</td>
                    <td>@portfolio.ThreeMonth</td>
                    <td>@portfolio.YearToDate</td>
                </tr>

                foreach (var benchmark in portfolio.Benchmarks)
                {
                    <tr>
                        @if (benchmark.OneMonth != null)
                        {
                            benchmark.OneMonth = decimal.Round((decimal)benchmark.OneMonth, 2, MidpointRounding.AwayFromZero);
                        }
                        @if (benchmark.ThreeMonth != null)
                        {
                            benchmark.ThreeMonth = decimal.Round((decimal)benchmark.ThreeMonth, 2, MidpointRounding.AwayFromZero);
                        }
                        @if (benchmark.YearToDate != null)
                        {
                            benchmark.YearToDate = decimal.Round((decimal)benchmark.YearToDate, 2, MidpointRounding.AwayFromZero);
                        }
                        <td></td>
                        <td style="padding-left: 20px;">@benchmark.Name</td>
                        <td>@benchmark.OneMonth</td>
                        <td>@benchmark.ThreeMonth</td>
                        <td>@benchmark.YearToDate</td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>
